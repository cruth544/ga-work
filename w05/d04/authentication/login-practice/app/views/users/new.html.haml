%h1.some{style: "color: magenta"} Eyes

= form_for @user do |f|
  - flash.each do |key, value|
    %div{:class => "#{key} #{value}"}

  %div
    = f.label :email
    = f.email_field :email
  %div
    = f.label "Password"
    = f.password_field :password
  %div
    = f.label "Password Confirmation"
    = f.password_field :password_confirmation

  = f.submit

